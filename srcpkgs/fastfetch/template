# Template file for 'fastfetch'
pkgname=fastfetch
version=2.11.0
revision=1
build_style=cmake
short_desc="Fastfetch is a neofetch-like tool for fetching system information."
maintainer="th0razin3 <th0razin3@proton.me>"
license="MIT"
homepage="https://github.com/fastfetch-cli/fastfetch"
distfiles="https://github.com/fastfetch-cli/fastfetch/archive/refs/tags/${version}.tar.gz"
checksum="bf7e42db6a219a73bace5ff977414bd79a7ce1b7085872e0c8012ee9a56b2822"

do_build() {
	mkdir -p build
	cd build
	cmake ..
	cmake --build . --target fastfetch --target flashfetch
}
