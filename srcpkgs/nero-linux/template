esac

pre_install() {
	sed -i 's@8M1K-20C7-45CP-CAC2-XU3Z-9924-PMCP-709X@9M1K-0098-P3HL-PK6P-T6UA-1E5X-E557-8X41@g' etc/nero/config
}

do_install() {
	vcopy usr /
	vcopy etc /
}
